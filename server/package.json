{
  "name": "olympia-server",
  "version": "1.0.0",
  "description": "Olympia Movie App - Backend Server",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "node tests/security.test.js",
    "test:security": "node tests/security.test.js",
    "test:logging": "node tests/database-logging.test.js",
    "test:coverage": "node tests/security.test.js --coverage",
    "backup": "node -e \"require('./services/backupService').createDatabaseBackup({type: 'manual'}).then(r => console.log('Backup created:', r.backupName)).catch(console.error)\"",
    "backup:incremental": "node -e \"require('./services/backupService').createIncrementalBackup().then(r => console.log('Incremental backup created:', r.backupName)).catch(console.error)\"",
    "health": "node -e \"require('./services/healthService').getSystemHealth().then(h => console.log('System Health:', h.status)).catch(console.error)\"",
    "analytics": "node -e \"require('./services/analyticsService').getDashboardStats().then(s => console.log('Platform Score:', s.overview.platformScore)).catch(console.error)\"",
    "logs": "tail -f logs/application.log",
    "logs:error": "tail -f logs/error.log",
    "logs:security": "tail -f logs/security.log",
    "logs:audit": "tail -f logs/audit.log",
    "watchlist:stats": "node -e \"require('./models/User'); require('mongoose').connect(process.env.MONGODB_URI || 'mongodb://localhost:27017/olympia').then(() => { console.log('Watchlist statistics available via API'); process.exit(0); })\"",
    "feedback:stats": "node -e \"require('./models/Feedback'); require('mongoose').connect(process.env.MONGODB_URI || 'mongodb://localhost:27017/olympia').then(() => { console.log('Feedback statistics available via API'); process.exit(0); })\""
  },
  "keywords": [
    "movie",
    "tmdb",
    "reviews",
    "watchlist",
    "cinema"
  ],
  "author": "Olympia Team",
  "license": "MIT",
  "dependencies": {
    "axios": "^1.10.0",
    "bcrypt": "^6.0.0",
    "bcryptjs": "^3.0.2",
    "cloudinary": "^2.7.0",
    "compression": "^1.8.0",
    "cors": "^2.8.5",
    "dotenv": "^17.2.0",
    "express": "^5.1.0",
    "express-rate-limit": "^8.0.1",
    "express-slow-down": "^2.1.0",
    "express-validator": "^7.2.1",
    "express-winston": "^4.2.0",
    "helmet": "^8.1.0",
    "ioredis": "^5.6.1",
    "isomorphic-dompurify": "^2.26.0",
    "joi": "^17.13.3",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.16.4",
    "morgan": "^1.10.0",
    "multer": "^2.0.2",
    "node-cache": "^5.1.2",
    "node-cron": "^4.2.1",
    "nodemailer": "^7.0.5",
    "qrcode": "^1.5.4",
    "redis": "^5.6.0",
    "sharp": "^0.34.3",
    "socket.io": "^4.8.1",
    "speakeasy": "^2.0.0",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "winston": "^3.17.0",
    "xss": "^1.0.15"
  },
  "devDependencies": {
    "concurrently": "^9.2.0",
    "jest": "^30.0.4",
    "nodemon": "^3.1.10",
    "supertest": "^7.1.3"
  }
}
